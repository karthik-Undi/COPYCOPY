
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>AssignProject</title>
</head>
<body>

    <div class="container" id="container">
        <div class="form-container log-in-container">
            @using (Html.BeginForm())
            {

                <h1>Welcome @ViewBag.name</h1>
                <h2>Role : Developer</h2>
                <h3>Modules Assigned: @ViewBag.mc</h3>



            }
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    @Html.ActionLink("Home", "WelcomeDev", "Developer")
                    @Html.ActionLink("View Modules", "Show", "Developer")
                    @Html.ActionLink("Mark as done", "DevMarkDone", "Developer")
                    @Html.ActionLink("View Bugs", "ViewBug", "Developer")
                    @Html.ActionLink("Log out", "MainLogin", "Login")
                </div>
            </div>
        </div>
    </div>


</body>
</html>

