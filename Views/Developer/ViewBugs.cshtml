@model IEnumerable<ReleaseManagementMVC.Models.temp.modbug>

@{
    ViewBag.Title = "ViewBugs";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}

<h2>ViewBugs</h2>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                Bug ID
            </th>
            <th>
                Module ID
            </th>
            <th>
                Module Name
            </th>
            <th>
                Developer ID
            </th>
            <th>
                Project ID
            </th>
            <th>
                Tester ID
            </th>
            <th>
                Module Status
            </th>
            <th>
                Bug Status
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.bug.BugID
                </td>
                <td>
                    @item.module.ModuleID
                </td>
                <td>
                    @item.module.ModuleName
                </td>
                <td>
                    @item.module.ProjectID
                </td>
                <td>
                    @item.module.DeveloperID
                </td>
                <td>
                    @item.module.TesterID
                </td>
                <td>
                    @item.module.ModuleStatus
                </td>
                <td>
                    @item.bug.BugID
                </td>
            </tr>
        }

    </table>
}
<br />
<br />
