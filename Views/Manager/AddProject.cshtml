@model ReleaseManagementMVC.Models.temp.RegProject

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/style.css" rel="stylesheet" />


</head>
<body>

    <div class="container" id="container">
        <div class="form-container log-in-container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h3>Add Project</h3>
                @Html.EditorFor(model => model.ProjectID, new { htmlAttributes = new { placeholder = "Project ID", @class = "form-control" } })
                @Html.EditorFor(model => model.ProjectName, new {htmlAttributes = new { placeholder = "Project Name", @class = "form-control" } })
                <span>start date</span>
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { type = "date", @class = "form-control" } })
                <span>Expected end date</span>
                @Html.EditorFor(model => model.ExpectedEndDate, new { htmlAttributes = new { type = "date", @class = "form-control" } })@*@Html.EditorFor(model => model.ActualEndDate, new { htmlAttributes = new { @class = "form-control" } })*@@*@Html.DropDownListFor(model => model.TeamID,ViewBag.teamlist as SelectList, new { style = "background-color: #eee; border: none; padding: 12px 15px;margin: 8px 0; width: 100%;" })*@@*@Html.EditorFor(model => model.ProjectStatus, new { htmlAttributes = new { @class = "form-control" } })*@<input type="submit" value="Create" class="btn btn-default" />

                if (ViewBag.succ == true)
                {
                    <div>
                        <p>Project Added Successfully</p>
                    </div>
                }

            }
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    @Html.ActionLink("Home", "WelcomeManager", "Manager")

                    @Html.ActionLink("Add Project", "AddProject", "Manager")
                    @Html.ActionLink("Assign Team to Projects", "AssignProject", "Manager")
                    @Html.ActionLink("Approve Projects", "ApproveProjects", "Manager")
                    @Html.ActionLink("Log out", "Logout", "Login")





                </div>
            </div>
        </div>
    </div>


</body>
</html>
