@model ReleaseManagementMVC.Models.Module

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>AssignModules1</title>
</head>
<body>
    <div class="container" id="container">
        <div class="form-container log-in-container">
            @using (Html.BeginForm())
            {
                <h3>Add Module</h3>
                @Html.AntiForgeryToken()


                @Html.EditorFor(model => model.ModuleID, new { htmlAttributes = new { required = "required", placeholder = "Module ID", @class = "form-control" } })
                @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { required = "required", placeholder = "Module Name", @class = "form-control" } })


                @Html.DropDownListFor(model => model.ProjectID, ViewBag.projlist as SelectList, "Select Project ID", new { required = "required", style = "background-color: #eee; border: none; padding: 12px 15px;margin: 8px 0; width: 100%;" })
                @Html.DropDownListFor(model => model.DeveloperID, ViewBag.devlist as SelectList, "Select dev ID", new { required = "required", style = "background-color: #eee; border: none; padding: 12px 15px;margin: 8px 0; width: 100%;" })

                @Html.DropDownListFor(model=>model.TesterID,ViewBag.testerlist as SelectList,"Select Tester",new { required = "required", style = "background-color: #eee; border: none; padding: 12px 15px;margin: 8px 0; width: 100%;" })
            <input type="submit" value="Create" class="btn btn-default" />
                if (ViewBag.succ == true)
                {
                    <div>
                         <p style="color:red">@ViewBag.msg</p>
                    </div>
                }
                
            }
        </div>


        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    @Html.ActionLink("Home", "WelcomeTeamLeader", "TeamLeader")

                    @Html.ActionLink("Add Modules", "AssignModules1", "TeamLeader")
                    @Html.ActionLink("Approve Modules", "ApproveModules", "TeamLeader")
                    @Html.ActionLink("View Modules", "ViewModules", "TeamLeader")
                    @Html.ActionLink("Logout", "Logout", "Login")
                </div>
            </div>
        </div>
    </div>
</body>
</html>
